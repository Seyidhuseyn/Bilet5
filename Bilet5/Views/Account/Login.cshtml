@using Bilet5.ViewModels;
@{
    ViewData["Title"] = "Login";
}
@model UserRegisterVM
<div class="login-register-area section-space-y-axis-100 mt-5 pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt-5 pt-lg-0">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" placeholder="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly"></div>
                            <a asp-action="Register">Do you  Have Account?</a>
                            <div class="col-12">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Register
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
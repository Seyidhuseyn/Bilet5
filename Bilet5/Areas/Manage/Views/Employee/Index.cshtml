@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Employee>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Role</th>
                <th>Description</th>
                <th>Twitter</th>
                <th>Facebook</th>
                <th>Instagram</th>
                <th>LinkedIn</th>
                <th>ImageUrl</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Role</td>
                    <td>@item.Description</td>
                    <td>@item.Twitter</td>
                    <td>@item.Facebook</td>
                    <td>@item.Instagram</td>
                    <td>@item.LinkedIn</td>
                    <td>@item.ImageUrl</td>
                    <td><a class="btn btn-info" asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

